{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comic</h1>

    <table>
        <tbody>
            <tr>
                <th>Kind</th>
                <td>{{ comic.kind }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ comic.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ comic.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comics_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comics_edit', { 'id': comic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
