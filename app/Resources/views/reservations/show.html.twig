{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Reservationdate</th>
                <td>{% if reservation.reservationDate %}{{ reservation.reservationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ reservation.userId }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reservations_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reservations_edit', { 'id': reservation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
