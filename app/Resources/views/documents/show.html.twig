{% extends 'base.html.twig' %}

{% block body %}
    <h1>Document</h1>

    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ document.author }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ document.year }}</td>
            </tr>
            <tr>
                <th>Arrivaldate</th>
                <td>{% if document.arrivalDate %}{{ document.arrivalDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ document.picture }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documents_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('documents_edit', { 'id': document.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
